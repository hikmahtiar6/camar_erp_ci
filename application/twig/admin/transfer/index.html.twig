{% extends 'admin/layout.html.twig' %}

{% block content_title %}
{% endblock %}

{% block content %}
		
	<div class="row clearfix">
	    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	        <div class="card card-transfer">
	            <div class="header">
	                <h2>
	                    Transfer Billet ke Aging Oven
	                </h2>
	                <ul class="header-dropdown m-r--5">
	                    
	                </ul>
	            </div>
	            <div class="body">
	                <div class="row clearfix">
	                    
	                    <div class="col-md-4">

	                    	<div class="form-group">

	                    		<label>Lot Tiket</label>
	                    		<select class="form-control" required="">
	                    			<option value=""> - Pilih -</option>
	                    			{% if lot_data %}
		                    			{% for lot_row in lot_data %}
		                    				<option value="{{ lot_row.header_lot_id }}"> Lot Tiket {{ lot_row.header_lot_id }}</option>
		                    			{% endfor %}
	                    			{% endif %}
	                    		</select>

	                    	</div>

	                    	<div class="form-group">
	                    		<button class="btn btn-primary waves-effect">Proses Data</button>
	                    	</div>

	                    </div>

	                    <div class="col-md-12">

	                    <table class="table table-stripped table-bordered">
	                    	<thead>
	                    		<tr>
	                    			<td class="bold">No. </td>
	                    			<td class="bold">Rak </td>
	                    			<td class="bold">Quantity Extrusion</td>
	                    			<td class="bold">Quantity Aging Oven</td>
	                    		</tr>
	                    	</thead>
	                    	<tbody>
	                    		<tr>
	                    			<td></td>
	                    			<td></td>
	                    			<td></td>
	                    			<td></td>
	                    		</tr>
	                    	</tbody>
	                    </table>

	                    </div>

	                </div>
	            </div>
	        </div>
	    </div>
	</div>

{% endblock %}

{% block javascript %}
	{{ parent() }}
	<script type="text/javascript" src="{{ base_url('assets_app/js/transfer.js') }}"></script>
	<script type="text/javascript">
		window.TRANSFER.init();
	</script>
{% endblock %}