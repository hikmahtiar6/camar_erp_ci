<table class="table table-bordered">
	<thead>
		<!--
		<tr>
			<td class="bold">Tanggal Pembelian</td>
			<td colspan="9">
				{{ tgl_pembelian }}
			</td>
		</tr>
		-->
		<tr align="center">
			<td rowspan="2" style="vertical-align: middle;"><b>Tanggal</b></td>
			<td rowspan="2" style="vertical-align: middle;"><b>Keterangan</b></td>
			<td colspan="3"><b>Hasil Press</b></td>
			<td colspan="2"><b>Akumulasi</b></td>
			<td class="bold" rowspan="2" style="vertical-align: middle;">
				Berat Aktual <br> 
				(rata2 kg/m)
			</td>
			<td rowspan="2" style="vertical-align: middle;"><b>OK/NG</b></td>
			<td rowspan="2" style="vertical-align: middle;"><b>Problem</b></td>
			<td rowspan="2" style="vertical-align: middle;"><b>Koreksi</b></td>
			<td rowspan="2" style="vertical-align: middle;"><b>Nama Korektor</b></td>
		</tr>

		<tr>
			<td><b>Panjang Billet</b></td>
			<td><b>Jml Billet</b></td>
			<td><b>Jumlah KG</b></td>
			<td><b>Billet</b></td>
			<td><b>KG</b></td>
		</tr>
	</thead>
	<tbody class="result-dies-idx">
		{% if tgl > tgl2 %}
		<tr>
			<td>{{ tgl_pembelian }}</td>
			<td>Pembelian</td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
		{% endif %}
		
		{% if data %}
			
			{% set jml_billet =  0 %}
			{% set jml_kg =  0 %}
			{% for key, row in data %}
			
			{% set billet_data = [] %}
				{% if row.MasterDetailId > 0 %}
					{% set billet_data = get_isian_data_lot(row.MasterDetailId, 'billet') %}
				{% endif %}
				
				<tr>
					<td>{{ row.LogTime|date('d-M-Y H:i:s') }}</td>
					<td>{{ row.DiesStatus }}</td>
					<td align="right">
						{% if billet_data %}
							{% for billet_row in billet_data %}

								{{  to_decimal(billet_row.PBilletActual) }}<br>
							{% endfor %}	
						{% endif %}
					</td>
					<td align="right">
						{% if billet_data %}
							{% for billet_row in billet_data %}
								{{  billet_row.JumlahBillet }} <br>
							{% endfor %}
						{% endif %}
					</td>
					<td align="right">
						{% if billet_data %}
							{% for billet_row in billet_data %}

								{% set machine = get_machine_in_spk_detail(row.MasterDetailId) %}
								{% set billet_weight = to_decimal(get_detail_machine(machine, 'BilletWeight')) %}
								{% set jumlah_kg = billet_weight * billet_row.PBilletActual * billet_row.JumlahBillet %}


								{{  jumlah_kg }}<br>
							{% endfor %}
						{% endif %}
					</td>
					<td align="right">
						{% if billet_data %}
							{% for billet_row in billet_data %}
								{% set jml_billet =  jml_billet + billet_row.JumlahBillet %}
								{% if jml_billet > 0 %}
								 {{ jml_billet }} <br>
								{% endif %}
							{% endfor %}
						{% endif %}
					</td>
					<td align="right">
						{% if billet_data %}
							{% for billet_row in billet_data %}

								{% set machine = get_machine_in_spk_detail(row.MasterDetailId) %}
								{% set billet_weight = to_decimal(get_detail_machine(machine, 'BilletWeight')) %}
								{% set jumlah_kg = billet_weight * billet_row.PBilletActual * billet_row.JumlahBillet %}

								{% set jml_kg =  jml_kg + jumlah_kg %}
								{% if jml_billet > 0 %}
									{{ jml_kg }} <br>
								{% endif %}

							{% endfor %}
						{% endif %}
					</td>
					<td></td>
					<td></td>
					<td>{{ row.Problem }}</td>
					<td>{{ row.Koreksi }}</td>
					<td>{{ row.Korektor }}</td>
				</tr>
			{% endfor %}
		
		{% endif %}
	</tbody>
</table>