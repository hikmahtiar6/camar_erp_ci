<form method="POST">
	<div class="modal-header">
	    <h4 class="modal-title" id="defaultModalLabel">
	    	Form Transaksi Lot
	    </h4>
	</div>
	<div class="modal-body">

		<input class="master-detail-id" type="hidden" value="{{ master_detail_id }}">
	
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Tanggal</th>
					<th>Shift</th>
					<th>Section Name</th>
					<th>Section Id</th>
					<th>Target Prod (Billet)</th>
				</tr>
			</thead>
			<tbody>
				{% if get_detail %}
				<tr>
					<td>{{ get_detail.tanggal|date("d-m-Y") }}</td>
					<td>{{ get_detail.shift }}</td>
					<td>{{ get_detail.SectionDescription }}</td>
					<td>{{ get_detail.section_id }}</td>
					<td>{{ get_detail.target_prod }}</td>
				</tr>
				{% endif %}
			</tbody>
		</table>

		<br>

		<div style="overflow: auto">

			<button class="btn btn-primary add-lot" type="button">
				Tambah
			</button>

			<br>
			<br>

			<table class="list-lot table table-hovered" id="list-lot" cellpadding="0" cellspacing="0" style="width: 100%">
			</table>
			<div class="opr-lot" id="pager-lot" style="text-align:center;"></div>

			<br>
			<br>

		</div>

	</div>
</form>

<script type="text/javascript" src="{{ base_url('assets_app/js/lot.js') }}"></script>
<script type="text/javascript">
	window.LOT.handleJqgrid('.list-lot', '#pager-lot');
	window.LOT.handleAddRow('.add-lot');
</script>