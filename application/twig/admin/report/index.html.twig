	REPORTING
{% endblock %}

{% block content %}
	
	<div class="row clearfix">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
	        <div class="card">
	            <div class="header">
	                <h2>
	                    Form Transaksi
	                </h2>
