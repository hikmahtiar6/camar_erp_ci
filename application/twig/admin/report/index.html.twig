	            </div>
	            <div class="body">
	                
	                <form class="report-form" method="POST" action="{{ site_url('admin/report/search') }}" target="_blank">

                		<label for="email_address">Mulai Tanggal</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input  class="form-control report-date-start" name="date_start" type="text">
                            </div>
                        </div>

                        <label>Sampai Tanggal</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input  class="form-control report-date-finish" name="date_finish"  type="text">
                            </div>
                        </div>

                        <label for="email_address">Shift</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input  class="form-control" name="shift" type="text">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary m-t-15 waves-effect" name="action" style="float: left" value="layar">
                        	Layar
                        </button>
                        <button type="submit" class="btn btn-success m-t-15 m-l-10 waves-effect" name="action" style="float: left" value="excel">
                        	Excel
                        </button>

                        <div class="preloader pl-size-xs m-t-15 m-l-10" style="float: left; display: none;">
                            <div class="spinner-layer pl-teal">
                                <div class="circle-clipper left">
                                    <div class="circle"></div>
                                </div>
                                <div class="circle-clipper right">
                                    <div class="circle"></div>
                                </div>
                            </div>
                        </div>
		                <div class="clearfix">&nbsp;</div>
                    </form>


	            </div>
	        </div>
	    </div>
	 </div>

{% endblock %}

{% block javascript %}
